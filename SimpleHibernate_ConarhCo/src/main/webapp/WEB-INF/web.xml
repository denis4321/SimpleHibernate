<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>shibernate.config.jndi</param-name>
        <param-value>jdbc/db</param-value>
    </context-param>
    <context-param>
        <param-name>shibernate.bean.elements.class</param-name>
        <param-value>com.conarhco.shibernate.test.ReviewBean</param-value>
    </context-param>
    <context-param>
        <param-name>shibernate.bean.elements.table</param-name>
        <param-value>review</param-value>
    </context-param>
    <listener>
        <listener-class>com.conarhco.shibernate.ee.SimpleHibernateServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ChangeServlet</servlet-name>
        <servlet-class>com.conarhco.shibernate.test.ChangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeServlet</servlet-name>
        <url-pattern>/changeReview</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
